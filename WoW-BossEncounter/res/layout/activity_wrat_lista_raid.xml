<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

    <ImageView
        android:id="@+id/wratlogo"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_wrat" />

    <ImageButton
        android:id="@+id/naxxramas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_naxxramas" />

    <ImageButton
        android:id="@+id/ulduar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/custom_ulduar" />

    <ImageButton
        android:id="@+id/toc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_trialofchampion" />
    
    <ImageButton
        android:id="@+id/icc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_icc" />

 </LinearLayout>
    </ScrollView>
</RelativeLayout>